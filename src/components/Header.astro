---
import Github from "./ui/Github.astro";

const { pathname } = Astro.url;

const paths = [
  { name: "home", path: "/" },
  { name: "work", path: "/work" },
  { name: "journey", path: "/journey" },
];
---

<nav
  class="sticky z-10 top-0 flex items-center justify-between rounded-b-md w-full mt-8 h-20 bg-gradient-to-b from-white dark:from-[#111010] from-65% to-100% to-transparent"
>
  <ul class="flex items-center gap-x-3 [&_a]:transition-opacity">
    {
      paths.map(({ name, path }) => (
        <li>
          <a href={path} class:list={[pathname === path && "font-bold", "hover:opacity-75"]}>
            {name}
          </a>
        </li>
      ))
    }
  </ul>

  <ul class="flex items-center gap-x-4 [&_a]:transition-opacity">
    <li>
      <a
        rel="noopener noreferrer"
        href="https://www.linkedin.com/in/felipeossandon/"
        target="_blank"
        class="hover:opacity-75"
      >
        <svg
          class="size-5"
          width="256"
          height="256"
          xmlns="http://www.w3.org/2000/svg"
          preserveAspectRatio="xMidYMid"
          viewBox="0 0 256 256"
          ><path
            d="M218.123 218.127h-37.931v-59.403c0-14.165-.253-32.4-19.728-32.4-19.756 0-22.779 15.434-22.779 31.369v60.43h-37.93V95.967h36.413v16.694h.51a39.907 39.907 0 0 1 35.928-19.733c38.445 0 45.533 25.288 45.533 58.186l-.016 67.013ZM56.955 79.27c-12.157.002-22.014-9.852-22.016-22.009-.002-12.157 9.851-22.014 22.008-22.016 12.157-.003 22.014 9.851 22.016 22.008A22.013 22.013 0 0 1 56.955 79.27m18.966 138.858H37.95V95.967h37.97v122.16ZM237.033.018H18.89C8.58-.098.125 8.161-.001 18.471v219.053c.122 10.315 8.576 18.582 18.89 18.474h218.144c10.336.128 18.823-8.139 18.966-18.474V18.454c-.147-10.33-8.635-18.588-18.966-18.453"
            fill="currentColor"></path></svg
        >
      </a>
    </li>
    <li>
      <a
        rel="noopener noreferrer"
        href="https://twitter.com/fe_ossandon/"
        target="_blank"
        class="hover:opacity-75"
      >
        <svg
          class="size-4"
          xmlns="http://www.w3.org/2000/svg"
          width="1200"
          height="1227"
          fill="none"
          viewBox="0 0 1200 1227"
          ><path
            fill="currentColor"
            d="M714.163 519.284 1160.89 0h-105.86L667.137 450.887 357.328 0H0l468.492 681.821L0 1226.37h105.866l409.625-476.152 327.181 476.152H1200L714.137 519.284h.026ZM569.165 687.828l-47.468-67.894-377.686-540.24h162.604l304.797 435.991 47.468 67.894 396.2 566.721H892.476L569.165 687.854v-.026Z"
          ></path></svg
        >
      </a>
    </li>
    <li>
      <a rel="noopener noreferrer" href="https://github.com/felipetodev" target="_blank" class="hover:opacity-75">
        <Github />
      </a>
    </li>
  </ul>
</nav>
